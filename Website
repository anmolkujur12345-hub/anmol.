<script>
  function login() {
    const user = document.getElementById('username').value;
    if(user) {
      document.getElementById('userDisplay').innerText = user;
      alert('Login successful!');
    } else {
      alert('Enter username!');
    }
  }

  function startStream() {
    const videoDiv = document.getElementById('streamVideo');
    videoDiv.innerHTML = `<p style="color:white; text-align:center; padding-top:80px;">Live Stream Placeholder</p>`;
    alert('Streaming started! (placeholder)');
  }
</script>

